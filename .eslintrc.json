{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
      "prettier",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:prettier/recommended",
      "plugin:import/recommended",
      "airbnb"
    ],
    "rules": {
      "function-paren-newline": "off",
      "jsx-a11y/no-static-element-interactions": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "react/button-has-type": "warn",
      "react/jsx-no-useless-fragment": ["error", { "allowExpressions": true }],
      "operator-linebreak:" : "off",
      "react/jsx-no-constructed-context-values": "off",
      "no-nested-ternary": "off",
      "object-curly-newline": "off",
      "react/no-unused-prop-types": "off",
      "react/require-default-props": "off",
      "indent": "off",
      "implicit-arrow-linebreak": "off",
      "no-confusing-arrow": "off",
      "no-alert": "off",
      "react/jsx-props-no-spreading": "off",
      "no-console": "off",
      "import/no-extraneous-dependencies": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "arrow-body-style": "off",
      "react/function-component-definition": ["error", { "namedComponents": "arrow-function" } ],
      "import/prefer-default-export": "off",
      "import/no-unresolved": "off",
      "import/extensions": ["error", { "js": "never", "jsx": "never", "ts": "never", "tsx": "never" } ],
      "no-duplicate-imports": ["error", { "includeExports": true }],
      "semi": ["error", "never"],
      "react/jsx-filename-extension": ["error", { "extensions": [".tsx", ".ts"] } ],
      "react/self-closing-comp": ["warn", { "component": false, "html": false } ],
      "linebreak-style": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 80,
          "tabWidth": 2,
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "always",
          "semi": false,
          "endOfLine": "auto",
          "importOrder": ["^@shared/(.*)$", "^@assets/(.*)$", "^@subdomains/(.*)$", "^[./]"],
          "importOrderSeparation": true,
          "importOrderSortSpecifiers": true
        }
      ],
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "jsx-a11y/alt-text": [
        "warn",
        {
          "elements": ["img"],
          "img": ["Image"]
        }
      ],
      "jsx-a11y/aria-props": "warn",
      "jsx-a11y/aria-proptypes": "warn",
      "jsx-a11y/aria-unsupported-elements": "warn",
      "jsx-a11y/role-has-required-aria-props": "warn",
      "jsx-a11y/role-supports-aria-props": "warn",
      "react/no-unknown-property": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/parsers": {
        "@typescript-eslint/parser": [".ts", ".tsx", ".d.ts"]
      }
    },
    "ignorePatterns": [
      "node_modules",
      "react-app-env.d.ts",
      "tsconfig.json",
      "setupTests.ts",
      "reportWebVitals.ts"
    ]
}
